-@ val lan: Lang

.row-fluid
    %div(id="formDiv")
        %h4
            %span.step = Messages("newgame.step4")(lan) 
            = Messages("newgame.step4title")(lan)
        %em = Messages("newgame.step4subtitle")(lan)
        .alert.alert-error(ng-show="error != null") {{error}}
    .span12.slight-padding-top
        .span6.pull-left.slight-padding-right
            .slight-padding-top
                .row.sum
                    .span4
                        %img(ng-src="/assets/images/{{skin.image}}")/
                    .span8
                        %h4 {{game.name | uppercase}}
                .row.sum
                    %p.bold = Messages("newgame.gamedesclabel")(lan)
                    %p {{game.description}}
                .row.sum
                    %p.bold = Messages("newgame.gameawardslabel")(lan)
                    %p {{game.awards}}
        .span6.pull-right.slight-padding-left
            .slight-padding-top
                .row
                    %p.bold = Messages("newgame.gametypelabel")(lan)
                    %p {{getWinStrMsg()}}
                .row
                    %p.bold = Messages("newgame.gamelocationlabel")(lan)
                    %p {{game.location}}
                .row
                    %p.bold = Messages("newgame.gamestarttdlabel")(lan)
                    %p 
                        {{game.startDate | date: dateFormat}}
                        {{game.startTime}} 
                        {{timezone}} 
                .row
                    %p.bold = Messages("newgame.gameendtdlabel")(lan)
                    %p 
                        {{game.endDate | date: dateFormat}}
                        {{game.endTime}} 
                        {{timezone}} 
                .row
                    %p.bold = Messages("newgame.gamedifflabel")(lan)
                    %p {{game.diff}}
                .row
                    %p 
                        %span.bold = Messages("newgame.gametasksnolabel")(lan)
                        {{game.tasksNo}}
                .row
                    %p 
                        %span.bold = Messages("newgame.gamedurationlabel")(lan)
                        {{gameduration()}}