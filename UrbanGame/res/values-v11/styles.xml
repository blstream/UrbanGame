<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="UrbanGameTheme" parent="AppBaseTheme">
        <!-- Sherlock Navigation List Customization -->
        <item name="android:dropDownListViewStyle">@style/DropDownListView.UrbanGame</item>
        <item name="actionBarItemBackground">@drawable/selectable_background</item>
        <item name="android:spinnerItemStyle">@style/Widget.Sherlock.DropDownItem.Spinner.UrbanGame</item>
        
        <!-- Sherlock Tabs Customization -->
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.UrbanGame</item>
        
        <!-- Action Bar Customization -->
        <item name="android:actionBarStyle">@style/ActionBar.Solid.UrbanGame</item>
    </style>

    <!-- Action Bar Customization -->
    <style name="ActionBar.Solid.UrbanGame" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="backgroundStacked">@drawable/ab_stacked_solid</item>
        <item name="android:titleTextStyle">@style/ActionBar.Title</item>
    </style>

</resources>